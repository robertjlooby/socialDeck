<h1>Sign In</h1>

<%= form_tag "/sessions/create" do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
<% end %>
