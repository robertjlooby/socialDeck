<%= image_tag comment.user.gravatar_url(:default => "identicon", :size => "40px") %>
<div class="content-area">
  <p><%= link_to comment.user.username, comment.user, :title => "View this user's profile" %></p>
  <p><%= comment.body %></p>
  <p>
    <% if comment.user_id == session[:user_id] %>
      <%= link_to comment_path(comment), :method => :delete do %><i class="icon-trash"></i><% end %>
      <%= link_to edit_comment_path(comment)  do %><i class="icon-edit"></i><% end %>
    <% end %>
  </p>
</div>